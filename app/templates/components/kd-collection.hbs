{{#each issues}}
  <h1>{{ name }}</h2>
  <ul class="magazine-display">
    <li class="magazine next">
      <div class="countdown">
        <div class="cover comming">
          <p class="info-next">Próximo Número</p>
        </div>
      </div>
      <div class="next-in">
        <span class="days">10 días</span>
      </div>
    </li>
      {{#each issues }}
        <li class="magazine">
            {{#link-to 'issue.view' this}}
              <img class="cover" {{bind-attr src=cover}} {{bind-attr alt=numberTitle}} />
              <div class="magazine-info">
                  <h4>{{numberTitle}}</h4>
              </div>
            {{/link-to}}
        </li>
      {{/each}}
  </ul>
{{/each}}
